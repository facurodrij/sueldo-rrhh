<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recibo[0].Contrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recibo[0].Periodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recibo[0].AdicionalAsistencia)
