                @Html.DisplayFor(modelItem => item.Periodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdicionalAsistencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
