@page
@model sueldo_rrhh.Pages.Admin.Conceptos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Concepto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Concepto.Id" />
            <div class="form-group">
                <label asp-for="Concepto.Nombre" class="control-label"></label>
                <input asp-for="Concepto.Nombre" class="form-control" />
                <span asp-validation-for="Concepto.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concepto.Fecha" class="control-label"></label>
                <input asp-for="Concepto.Fecha" class="form-control" />
                <span asp-validation-for="Concepto.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concepto.Valor" class="control-label"></label>
                <input asp-for="Concepto.Valor" class="form-control" />
                <span asp-validation-for="Concepto.Valor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Concepto.Remunerativo" /> @Html.DisplayNameFor(model => model.Concepto.Remunerativo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Concepto.ConvenioId" class="control-label"></label>
                <select asp-for="Concepto.ConvenioId" class="form-control" asp-items="ViewBag.ConvenioId"></select>
                <span asp-validation-for="Concepto.ConvenioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
