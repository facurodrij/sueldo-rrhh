@page
@model sueldo_rrhh.Pages.Admin.Solicitudes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Solicitud[0].Contrato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solicitud[0].FechaSolicitud)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solicitud[0].FechaInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solicitud[0].FechaFin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solicitud[0].Motivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solicitud[0].Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solicitud[0].Estado)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Solicitud)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Contrato.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaSolicitud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>